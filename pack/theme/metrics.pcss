:root {
  --length-xxs: 4px;
  --length-xs: 8px;
  --length-s: 12px;
  --length-m: 16px;
  --length-l: 24px;
  --length-xl: 32px;
  --length-xxl: 64px;
  --length-drawer: 240px;
}

:local(.padding-m) { padding: var(--length-m); }

:local(.fill-overflow-vertical) {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

:local(.drawer-content) { width: var(--length-drawer); }

:local(.toolbar-menu-button) { margin: 0 var(--length-s); }
